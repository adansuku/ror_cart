<h2>Cart</h2>
<% @cart_items.each do |cart_item| %>
    <%= form_with url: update_cart_item_path(cart_item), method: :patch do |form| %>
      <%= form.number_field :quantity, value: cart_item.quantity %>
      <%= form.submit "Update" %>
    <% end %>
    | <%= cart_item.product.product_code %>
    | <%= cart_item.product.name %>
    | <%= cart_item.total_price %> €
    <%= button_to 'X', destroy_cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
  <hr>
  Total: <%= current_cart.total_price %> €  
  <hr>
  Cart: <%= @number_of_cart_items %> items
