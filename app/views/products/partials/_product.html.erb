<div class="row row-cols-2 g-3 products">
  <% @products.each do |product| %>
    <div class="col">
      <div class="card">
        <img src="<%= product.image%>" class="card-img-top productImage">
        <div class="card-body">
          <div class="position-absolute top-0 end-0 pt-2 px-3 text-end"> 
          <strong><%= t("product.reference") %>: </strong> <small><%=  product.product_code %></small></div>
          <h5 class="card-title"><strong><%= product.name %></strong></h5>
          <h3 class="card-title ms-auto"><%= product.price %> â‚¬</h3>
          <p class="card-text"><%= product.discount.name if product.discount %></p>
          <%= button_to t("cart.add_to_cart"), add_to_cart_path(product_id: product.id), method: :post, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


